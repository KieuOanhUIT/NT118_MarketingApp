<?xml version="1.0" encoding="utf-8"?>
<!-- Editable Subtask Item - Dùng để thêm subtask mới và chỉnh sửa subtask -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subtaskCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/backgroundCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Checkbox + Title + Delete Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- Phần Checkbox: Done -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoàn thành"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <CheckBox
                        android:id="@+id/checkboxSubtask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:buttonTint="@color/colorPrimary"
                        android:contentDescription="Task status"/>

                </LinearLayout>

                <!-- Phần Input: Tên Subtask -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên subtask"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <EditText
                        android:id="@+id/editSubtaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/subtask_title_hint"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/hintText"
                        android:background="@drawable/bg_input_field"
                        android:padding="8dp"
                        android:minHeight="40dp"
                        android:inputType="text"/>

                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/btnDeleteSubtask"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Xóa subtask"
                app:tint="#E53935"/>

        </LinearLayout>

        <!-- Assign và Deadline -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Assign -->
            <LinearLayout
                android:id="@+id/layoutAssign"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtask_assign"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_field"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="Assign icon"
                        android:layout_marginEnd="4dp"/>

                    <EditText
                        android:id="@+id/editAssign"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:hint="Chọn người phụ trách"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/hintText"
                        android:background="@android:color/transparent"
                        android:minHeight="30dp"
                        android:gravity="center_vertical"
                        android:focusable="false"
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:inputType="none"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Deadline -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/subtask_deadline"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_input_field"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_deadline"
                        app:tint="@color/colorPrimary"
                        android:contentDescription="Deadline icon"
                        android:layout_marginEnd="4dp"/>

                    <EditText
                        android:id="@+id/editSubtaskDeadline"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hint_deadline"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/hintText"
                        android:background="@android:color/transparent"
                        android:minHeight="30dp"
                        android:gravity="center_vertical"
                        android:focusable="false"
                        android:clickable="true"
                        android:inputType="none"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
