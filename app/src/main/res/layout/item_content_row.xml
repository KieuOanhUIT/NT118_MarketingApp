<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: #001"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề bài viết"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mô tả / Caption bài viết"
            android:textColor="#555"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian: 10:30 - 16/10/2025"
            android:textSize="12sp"
            android:textColor="#777"/>

        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kênh: Facebook"
            android:textSize="12sp"
            android:textColor="#777"/>

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác giả: Admin"
            android:textSize="12sp"
            android:textColor="#777"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trạng thái: Pending"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link: https://facebook.com/post/123"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:autoLink="web"/>

        <Button
            android:id="@+id/btnChangeStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển trạng thái"
            android:textAllCaps="false"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>