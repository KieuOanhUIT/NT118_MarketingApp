<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Header with back arrow and title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="#FF3CC7">>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_content_title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:padding="14dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/transparent">


        <!-- Subheading: Thông tin cơ bản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_info"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#007C77"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"/>

        <!-- Title (required) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_title"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/title_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_title"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Type (required) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_type"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/type_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Channel (required) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_channel"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/channel_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editChannel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_channel"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_tags"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/tags_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tags"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editTags"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_tags"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_time"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Time icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_label"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_time"
                    android:inputType="datetime"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"
                    android:focusable="false"
                    android:clickable="true"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Subheading: Trạng thái & đính kèm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_attachment"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#007C77"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"/>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_status"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/status_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Attachment Link (required nếu status là In progress hoặc Done) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_link"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Liên kết đính kèm"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment_link"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_attachment"
                    android:inputType="textUri"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Editor Link (Google Docs/Drive) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Editor link icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_link"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editEditorLink"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_editor_link"
                    android:inputType="textUri"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Subtasks Section (Reusable layout) -->
        <include layout="@layout/layout_subtasks_section" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_create_content"
            android:backgroundTint="#FF3CC7"
            android:textColor="@color/background"
            android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>