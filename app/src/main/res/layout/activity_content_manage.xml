<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="32dp"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Header with back arrow, title, and edit/save button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="#FF3CC7">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_content_title"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:padding="14dp"
                android:background="@android:color/transparent"/>
                
            <!-- Edit/Save Button (visible in VIEW/EDIT mode) -->
            <Button
                android:id="@+id/btnEditSave"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="@string/btn_edit"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/background"
                android:backgroundTint="#007C77"
                android:elevation="2dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@android:color/transparent">


        <!-- Subheading: Thông tin cơ bản -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/basic_info"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#007C77"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"/>

        <!-- Title (required) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_title"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/title_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_title"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Type (required) - CREATE mode: custom popup -->
        <LinearLayout
            android:id="@+id/layoutContentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_type"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/type_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editContentType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Chọn loại nội dung"
                    android:inputType="none"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"
                    android:focusable="false"
                    android:clickable="false"
                    android:cursorVisible="false"/>
            </LinearLayout>
    </LinearLayout>
    
        <!-- Type (required) - VIEW/EDIT mode: spinner -->
        <LinearLayout
            android:id="@+id/layoutSpinnerType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp"
            android:visibility="gone">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_type"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/type_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <Spinner
                    android:id="@+id/spinnerType"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Channel (required) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_channel"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/channel_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/channel_required"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editChannel"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_channel"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Tags -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_tags"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/tags_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tags"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editTags"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_tags"
                    android:inputType="text"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
    </LinearLayout>


        <!-- Subheading: Thời gian đăng tải -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian đăng tải dự kiến"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#007C77"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"/>

        <!-- Date và Time trong cùng 1 row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF">

            <!-- Date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_field"
                android:padding="8dp"
                android:elevation="2dp"
                android:layout_marginEnd="8dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/colorPrimary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Date icon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"/>
                    <EditText
                        android:id="@+id/editDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="dd/MM/yyyy"
                        android:inputType="none"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/hintText"
                        android:focusable="false"
                        android:clickable="true"
                        android:minHeight="36dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_field"
                android:padding="8dp"
                android:elevation="2dp"
                android:layout_marginStart="8dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_time"
                    app:tint="@color/colorPrimary"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Time icon"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giờ"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/textSecondary"/>
                    <EditText
                        android:id="@+id/editTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="HH:mm"
                        android:inputType="none"
                        android:background="@android:color/transparent"
                        android:textSize="14sp"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/hintText"
                        android:focusable="false"
                        android:clickable="true"
                        android:minHeight="36dp"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Subheading: Trạng thái & đính kèm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_attachment"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#007C77"
            android:layout_marginBottom="8dp"
            android:background="@android:color/transparent"/>

        <!-- Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_status"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/status_icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/status"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <Spinner
                    android:id="@+id/spinnerStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_field"/>
            </LinearLayout>
    </LinearLayout>

        <!-- Status Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/status_done_note"
            android:textSize="12sp"
            android:textColor="@color/deadlineOverdue"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@android:color/white"/>

        <!-- Attachment Link (required nếu status là In progress hoặc Done) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_link"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Liên kết đính kèm"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/attachment_link"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_attachment"
                    android:inputType="textUri"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Editor Link (Google Docs/Drive) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_input_field"
            android:padding="8dp"
            android:elevation="2dp">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="8dp"
                android:contentDescription="Editor link icon"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvEditorLinkLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editor_link"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary"/>
                <EditText
                    android:id="@+id/editEditorLink"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="@string/hint_editor_link"
                    android:inputType="textUri"
                    android:background="@drawable/bg_input_field"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/hintText"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Subtasks Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <!-- Header: Subtasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/subtasks_section"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#007C77"
                    android:drawableStart="@drawable/ic_subtask"
                    android:drawableTint="#007C77"
                    android:drawablePadding="8dp"
                    android:background="@android:color/white" />

            </LinearLayout>

            <!-- Subtasks Container (populated dynamically) -->
            <LinearLayout
                android:id="@+id/subtasksContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:background="@color/white">
                <!-- Subtasks sẽ được thêm động từ code -->
            </LinearLayout>

            <!-- Add Subtask Button -->
            <Button
                android:id="@+id/btnAddSubtask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add_subtask"
                android:background="@drawable/bg_button_cancel"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:drawableStart="@drawable/ic_add"
                android:drawableTint="@color/colorPrimary"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_create_content"
            android:backgroundTint="#FF3CC7"
            android:textColor="@color/background"
            android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>