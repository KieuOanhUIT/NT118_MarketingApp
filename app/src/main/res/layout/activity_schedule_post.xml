<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đặt lịch đăng bài"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/background"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:layout_marginBottom="24dp" />

        <!-- Form chứa nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="3dp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/background"
            android:clipToOutline="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/form_card_bg">

            <!-- Chọn nền tảng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn nền tảng"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerPlatform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:popupBackground="@color/background"
                android:backgroundTint="@color/colorSecondary"
                android:layout_marginBottom="16dp" />

            <!-- Thời gian đăng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian đăng"
                android:textColor="@color/textPrimary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ví dụ: 10:00 - 22/10/2025"
                android:padding="12dp"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Hàng nút hành động -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Nút Hủy -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hủy"
                android:textColor="@color/background"
                android:backgroundTint="@color/colorSecondary"
                android:layout_marginEnd="8dp" />

            <!-- Nút Xác nhận -->
            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xác nhận"
                android:textColor="@color/textPrimary"
                android:backgroundTint="@color/colorAccent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
