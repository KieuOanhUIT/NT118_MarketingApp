<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingTop="32dp"
    tools:context=".ContentListActivity">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách Content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/background"
        android:gravity="center"
        android:background="#FF3CC7"
        android:padding="14dp" />

    <!-- Thanh tìm kiếm + bộ lọc -->
    <LinearLayout
        android:id="@+id/layoutSearchFilter"
        android:layout_below="@id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="12dp">

        <EditText
            android:id="@+id/etSearchContent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:hint="Tìm kiếm content..."
            android:padding="8dp"
            android:background="@drawable/bg_edittext_border" />

        <Spinner
            android:id="@+id/spinnerStatusFilter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Action Buttons: Thêm Content và Content Calendar -->
    <LinearLayout
        android:id="@+id/layoutActionButtons"
        android:layout_below="@id/layoutSearchFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="12dp"
        android:gravity="center">

        <!-- Nút Thêm Content -->
        <Button
            android:id="@+id/btnAddContent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thêm Content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/background"
            android:backgroundTint="#FF3CC7"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:drawablePadding="8dp"
            android:textAllCaps="false"/>

        <!-- Nút Content Calendar -->
        <Button
            android:id="@+id/btnContentCalendar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Lịch Content"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/background"
            android:backgroundTint="#007C77"
            android:padding="12dp"
            android:layout_marginStart="8dp"
            android:drawablePadding="8dp"
            android:textAllCaps="false"/>
    </LinearLayout>

    <!-- Bảng danh sách -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@id/layoutActionButtons"
        android:layout_above="@id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/layoutContentTable"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp" />
    </ScrollView>

    <!-- Thanh điều hướng cố định -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>