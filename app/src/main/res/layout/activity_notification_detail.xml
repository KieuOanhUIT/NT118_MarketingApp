<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Icon -->
        <ImageView
            android:id="@+id/imgDetailIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:tint="@color/colorSecondary"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_notification" />

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tiêu đề thông báo"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Thời gian -->
        <TextView
            android:id="@+id/tvDetailTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:30 - 16/10/2025"
            android:textColor="#777"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Nội dung -->
        <TextView
            android:id="@+id/tvDetailMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung chi tiết của thông báo sẽ hiển thị ở đây."
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</ScrollView>
